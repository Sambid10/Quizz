<header class="h-16 border-b border-gray-300 max-w-6xl mx-auto backdrop-blur-xl flex items-center justify-between px-4 lg:px-0 sticky top-0 z-30">
  <!-- Logo -->
  <div class="bg-gradient-to-r from-rose-400 to-blue-400 bg-clip-text">
    <a href="/">
      <h1 class="text-transparent text-2xl font-semibold italic">Quizzz</h1>
    </a>
  </div>

  <% if user_signed_in? %>
    <div class="flex items-center gap-4">
      <%= link_to "Get Started", pages_users_path, class: "bg-gradient-to-br from-rose-400 to-blue-400 h-10 rounded-full px-4 w-fit flex items-center justify-center text-white font-semibold text-base hover:opacity-90 cursor-pointer" %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "border border-rose-400 text-black h-10 bg-white rounded-full w-24 flex items-center justify-center font-semibold text-base hover:opacity-90 cursor-pointer hover:bg-blue-50 ease-in duration-200 transition-colors" %>
    </div>

  <% elsif admin_signed_in? %>
    <div class="flex items-center gap-4">
      <%= link_to "Dashboard", pages_admin_path, class: "bg-gradient-to-br from-rose-400 to-blue-400 h-10 rounded-full px-4 w-fit flex items-center justify-center text-white font-semibold text-base hover:opacity-90 cursor-pointer" %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "border border-rose-400 text-black h-10 rounded-full w-24 flex items-center bg-white justify-center font-semibold text-base hover:opacity-90 cursor-pointer hover:bg-blue-50 ease-in duration-200 transition-colors" %>
    </div>

  <% else %>
    <div class="flex items-center gap-4">
      <%= link_to "Sign in", new_user_session_path, class: "bg-gradient-to-br from-rose-400 to-blue-400 h-10 rounded-full w-24 flex items-center justify-center text-white font-semibold text-base hover:opacity-90 cursor-pointer" %>
      <%= link_to "Sign up", new_user_registration_path, class: "border border-rose-400 bg-white text-black h-10 rounded-full w-24 flex items-center justify-center font-semibold text-base hover:opacity-90 cursor-pointer hover:bg-blue-50 ease-in duration-200 transition-colors" %>
    </div>
  <% end %>
</header>
