<div class="flex items-center justify-center min-h-[calc(100dvh-64px)]">
    <div class="border border-gray-300 rounded-xl px-4 py-6  w-[90%] sm:w-[70%] md:w-[50%] lg:w-[40%] shadow-xl rounded-xl ">
        <h2 class="text-3xl font-semibold tracking-tight">Sign Up</h2>
        <p class="text-gray-600 mt-1 text-xs ">Stay updated...</p>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="flex flex-col gap-2">
            <div class="field mt-2">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "w-full px-2 h-10 border focus:border focus:border-blue-400 border-gray-400 rounded-xl"%>
            </div>

            <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-2 h-10 border focus:border focus:border-blue-400 border-gray-400 rounded-xl" %>
            </div>
        </div>

        <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "w-full px-2 h-10 border focus:border focus:border-blue-400 border-gray-400 rounded-xl"%>
        </div>

        <div class="actions mb-2 mt-2">
            <%= f.submit "Sign up",class:"cursor-pointer hover:opacity-90 h-10 w-full bg-gradient-to-r from-rose-400 to-blue-400 text-white rounded-full font-semibold text-base" %>
        </div>
        <% end %>

        <div class="flex items-center justify-end">
        <%- if controller_name != 'sessions' %>
        <h1 class="text-sm">Already have an account? </h1>
        <%= link_to ' Log in here..', new_session_path(resource_name), class:"text-sm p-0 ml-2  text-blue-600 hover:underline" %><br />
        <% end %>
        </div>
    </div>
</div>