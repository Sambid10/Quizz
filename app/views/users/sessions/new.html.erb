<div class="flex items-center justify-center min-h-[calc(100dvh-64px)]">
    <div class="border border-gray-300 rounded-xl px-4 py-6 w-[90%] sm:w-[70%] md:w-[50%] lg:w-[40%] shadow-xl rounded-xl ">
        <h2 class="text-3xl font-semibold tracking-tight">Sign In</h2>
        <p class="text-gray-600 mt-1 text-xs ">Stay updated...</p>


        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="flex flex-col gap-2">
            <div class="field mt-4">
                <%= f.label :email, nil, class: "text-base mb-1" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-2 h-10 border focus:border focus:border-blue-400 border-gray-400 rounded-xl" %>

            </div>
            <div class="field">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "current-password", class: "w-full h-10 px-2 border border-gray-400 focus:border-blue-400 rounded-xl" %>

            </div>

        </div>
        <div class="mt-2 flex justify-between items-center">
            <% if devise_mapping.rememberable? %>
            <div class="field ">

                <div class="flex items-center h-full gap-1">
                    <%= f.check_box :remember_me,class:"mt-[0.5px]" %>
                    <%= f.label :remember_me,class:"text-gray-800 text-sm" %>
                </div>
            </div>

            <% end %>
            <div>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name),class:"text-gray-800 text-sm" %><br />
                <% end %>
            </div>
        </div>


        <div class="actions mt-2">
            <%= f.submit "Sign in" ,class:"cursor-pointer hover:opacity-90 h-10 w-full bg-gradient-to-r from-rose-400 to-blue-400 text-white rounded-full font-semibold text-base" %>
        </div>

        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div class="flex flex-col items-end gap-1 text-gray-800 text-sm ">
            <div class="flex items-center gap-2 text-[14px]">
                <h1 class="mt-2 "> Don't have an account?</h1>
                <%= link_to "Sign up here..", new_registration_path(resource_name),class:"  text-sm p-0 mt-1.5 text-blue-600 hover:underline"  %>
            </div>
        </div>
        <% end %>
        <% end %>

    </div>